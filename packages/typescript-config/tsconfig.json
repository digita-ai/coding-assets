{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [ "es2020", "dom" ],
        "module": "es2020",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "typeRoots": [ "node_modules/@types" ],
    },
    "files": [
      "./jest.config.ts"
    ],
    "include": [ 
        "lib" 
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
    ],
}